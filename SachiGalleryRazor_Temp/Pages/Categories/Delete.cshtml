@page
@model SachiGalleryRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <div class="border p-3 m-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0">Category Name</label>
            <input asp-for="Category.Name" type="text" class="form-control" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" type="text" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/category/index" class="btn btn-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>

    </div>
</form>